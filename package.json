{
  "name": "kwish2",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "start": "run-p db app",
    "app" : "node src/server.js",
    "db" : "rethinkdb",
    "build:lint": "eslint public/src src",
    "build:sass": "node-sass --output-style=compressed public/sass/kwish.scss public/dist/kwish.min.css",
    "build:js": "browserify public/js/app.js -o public/dist/app.js -t [ babelify --presets [ es2015 ] ]  | uglifyjs -mc -o dist/app.min.js",
    "build": "run-s build:sass build:lint",
    "dev:sass": "node-sass --watch --output-style=compressed public/sass/kwish.scss public/dist/kwish.min.css",
    "dev:js": "watchify public/js/app.js -o public/dist/app.js -t [ babelify --presets [ es2015 ] ]",
    "dev:start": "nodemon --watch src src/server.js",
    "dev": "run-p db dev:sass dev:js dev:start"
  },
  "author": "",
  "license": "AGPL-3.0",
  "engine": ">=8.0.0",
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "eslint": "^4.3.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "uglify-js": "^3.0.28",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "express": "^4.15.3",
    "rethinkdb": "^2.3.3",
    "whatwg-fetch": "^2.0.3"
  }
}
